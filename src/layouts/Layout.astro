---
import '@fontsource-variable/yrsa';
import { spring } from "motion"
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global define:vars={{ spring: spring(0.2, 0.7) }}>
	:root {
		--color-primary: #6C21A6;

		--border-participate: color-mix(in srgb, var(--color-primary) 50%, white 0%);
		--background-participate: color-mix(in srgb, var(--color-primary) 5%, white 0%);

		--color-button-background: var(--color-primary);
		--color-button-shadow: color-mix(in oklab, var(--color-primary) 50%, black 50%);

	}
	body {
		margin: 0 auto;
		width: 100%;
		height: 100%;
		font-family: 'Yrsa Variable', serif;
	}
	body {
		padding: 28px 16px;
		box-sizing: border-box;
		max-width: 65ch;
		display: flex;
		flex-direction: column;
	}
	h1 {
		font-size: 2.5rem;
	}
	h2 {
		color: var(--color-primary);
		font-weight: 700;
		font-size: 1.5rem;
		letter-spacing: 0.05em;
		text-transform: uppercase;
	}
	p {
		font-size: 1.25rem;
	}
</style>
